<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".GetStarted">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal"
        tools:ignore="MissingConstraints">


    <ImageView
        android:id="@+id/illustrationImage"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/images"
        android:contentDescription="@string/finance_illustration"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="10dp" />

    <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dock Into Budget Peace"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/Green"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp" />

    <!-- Description -->
    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Begin your journey with Coinbuddy budgeting made easy, flexible, and built for your lifestyle."
        android:textSize="16sp"
        android:textColor="#444"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:paddingHorizontal="12dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2">

        <Button
            android:id="@+id/SignIn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SIGNIN"
            android:textAllCaps="false"
            android:backgroundTint="@color/Green"
            android:textColor="#fff"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/SignUp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SIGNUP"
            android:textAllCaps="false"
            android:backgroundTint="@color/Green"
            android:textColor="#fff"
            android:layout_marginStart="8dp" />

    </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>